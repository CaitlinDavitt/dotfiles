//-- Layout ----------------------------------
{
    "layer": "top",
    "position": "top",
    "output": ["DP-5", "eDP-1", "DP-8"], // Which Monitor waybar opens on
    "height": 35,
    "spacing": 4,
    "margin-top": 5,
    "margin-bottom":1,

//-- Modules -----------------------------
    "modules-left":[  "custom/launcher", "wlr/workspaces", "hyprland/window"],
    "modules-right":["playerctl",  "idle_inhibitor", "custom/weather", "pulseaudio", "cpu", "memory", "temperature",  "battery", "tray", "clock", "custom/power"],

//-- TaskBar ------------------------------
    "wlr/taskbar": {
        "format": "{icon}", 
        "icon-size": 20,
        "icon-theme": "Papirus",
        //"format": "{icon}", 
        //"tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "on-click-right": "activate",
        //"all-outputs": false,
        //"format-icons": {
          "active":"{icon}",
         // "default": "{title}"
        },
        
    },



    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            //"1": "ÔÑ†",
            //"2": "Ôâ®",
            //"3": "ÔÑ°",
            //"4": "ÔÜº",
            //"5": "ÔÅµ",
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        }
    },
    "wlr/workspaces": {
        "sort-by-name": true
         "on-click": "/usr/local/bin/hyprctl dispatch workspace 3"
        // "sort-by-coordinates": true
    },

//-- Idle ---------------------------------
    "idle_inhibitor": {
        "format": "{icon} ",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },

//-- Tray ---------------------------------
    "tray": {
        "icon-size": 20,
        "spacing": 10
    },

//-- Clock --------------------------------
    "clock": {
       "timezone": "America/Chicago",
        "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "ÔÄó {:%I:%M %p}",
        "format-alt": "ÔÅ≥ {:%a %b %d, %G}"
    },

//-- CPU ---------------------------------
    "cpu": {
         "interval": 5,
         "format": "Ôò¶ {usage}%",
         "on-click": "kitty btop" 
    },

//-- Mem ----------------------------------
    "memory": {
         "interval": 10,
         "format": "Ôò™ {used:0.1f}G",
    },

//-- Blacklight --------------------------
    "backlight": {
        // "device": "acpi_video1",
        "format": "{icon} {percent}%",
        "format-icons": ["ÔÜÖ", "ÔÑë"],
         "on-click": "kitty btop"
    },

//-- Battery -----------------------------
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}  {capacity}%",
        "format-charging": "Ôóß {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{icon} {time}",
        // "format-good": "", // An empty format will hide the module
        "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

//-- Disk ---------------------------------
    "disk": {
         "interval": 30,
         "format": "Ôö∑ {free}",
    },

//-- Network ------------------------------
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "Connected ÔÉÅ ",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "on-click-right": "sh ~/.config/rofi/wifi_menu/rofi_wifi_menu"
    },

//-- Pulseaudio ---------------------------
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon} {volume}%",
        "format-bluetooth": "{icon} {volume}% Ôäî",
        "format-bluetooth-muted": "{icon}Ôäî {format_source}",
        "format-muted": "{format_source}",
        "format-source": "ÔÄ¶",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
     },

//-- MPD ---------------------------------
      "mpd": {
        "interval": 2,
        "unknown-tag": "",

        "format": "{stateIcon} {artist} - {title}",
        "format-disconnected": "Ô¢â Disconnected",
        "format-paused": "{stateIcon} {artist} - {title}",
        "format-stopped": "Stopped Ôäç",
        "state-icons": {
            "paused": "ÔÖÑ",
            "playing": "Ôäã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)",
		// Commands to execute on events
        "on-click": "mpc toggle",
        "on-click-middle": "mpc prev",
        "on-click-right": "mpc next",
        "on-update": "",
        "on-scroll-up": "mpc seek +00:00:01",
        "on-scroll-down": "mpc seek -00:00:01",
        "smooth-scrolling-threshold": 1,
    },

//-- Launcher -----------------------------
    "custom/launcher":{
        "format": "ÔåÉ ",
        "on-click": "~/.config/eww/dashboard/launch_dashboard",
        "on-click-right": "eww --config ~/.config/eww/dashboard/ kill"
    },

//-- Power --------------------------------
    "custom/power":{
        "format": "ÔÑ∏ ",
        "on-click": "~/.config/hypr/scripts/powermenu.sh",
        "on-click-right": "killall waybar"
    },

//-- Weather -----------------------------
    "custom/weather": {
    "format": "{}",
    "tooltip": true,
    "interval": 3600,
    "exec": "~/.config/hypr/scripts/waybar-wttr.py",
    "return-type": "json"
    },
//-- Tempturature ------------------------
      "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{icon} {temperatureC}¬∞C",
        "format": "{icon} {temperatureC}¬∞C",
        "format-icons": ["Ôãã", "Ôãâ", "Ôãá"]
    },

//-- Bluetooth  ---------------------------
    "bluetooth": {
  	// "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
  	"format": " Ôäî {status} ",
  	"format-disabled": "", // an empty format will hide the module
  	"format-connected": " Ôäî {num_connections} ",
  	"tooltip-format": "{controller_alias}\t{controller_address}",
  	"tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
  	"tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    //"on-click": "exec ~/.config/hypr/scripts/wofi_blue" */
    "on-click": "exec blueman-manager"
    },

//-- Media player  ---------------------------
    "playerctl": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/hypr/scripts/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    }

}
